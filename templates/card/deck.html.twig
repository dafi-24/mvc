{% extends "base.html.twig" %}

{% block title %}Kortlek{% endblock %}

{% block main %}
<h1>Visa Kortleken</h1>

{% for suit, cards in sortedDeck %}
    <h2>{{ suit|capitalize }}</h2>
    <div class="text-container">
        {% for card in cards %}
            <span class="card" style="display: inline-block; margin: 5px; padding: 5px; border: 1px solid #000;">
                {{ card.getColoredUnicode()|raw }}
            </span>
        {% endfor %}
    </div>
{% endfor %}

{% endblock %}
